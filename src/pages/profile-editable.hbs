{{#extend "main" title="Профиль" }}
    {{#content "content" }}
        {{> 'link-back/link-back'}}
        <div class="profile-page">
            {{> 'profile-avatar/profile-avatar' addClass="profile-page__avatar"}}
            <form class="border-list__form">
                <ul class="border-list border-list--mb60">
                    <li class="border-list__item">
                        {{> 'edited-label/edited-label' editable=true text="Почта" name="email" type="email" value="pochta@yandex.ru"}}
                    </li>
                    <li class="border-list__item">
                        {{> 'edited-label/edited-label' editable=true text="Логин" name="login" type="text" value="ivanivanov"}}
                    </li>
                    <li class="border-list__item">
                        {{> 'edited-label/edited-label' editable=true text="Имя" name="first_name" type="text" value="Иван"}}
                    </li>
                    <li class="border-list__item">
                        {{> 'edited-label/edited-label' editable=true text="Фамилия" name="second_name" type="text" value="Иванов"}}
                    </li>
                    <li class="border-list__item">
                        {{> 'edited-label/edited-label' editable=true text="Имя в чате" name="display_name" type="text" value="Иван"}}
                    </li>
                    <li class="border-list__item">
                        {{> 'edited-label/edited-label' editable=true text="Телефон" name="phone" type="tel" value="+7 (909) 967 30 30"}}
                    </li>
                </ul>
                {{> "button/button" text="Сохранить" size="sm" variant="primary" center=true type="submit"}}
            </form>
        </div>
    {{/content}}
{{/extend}}