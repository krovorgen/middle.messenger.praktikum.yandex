.notification {
  position: fixed;
  bottom: 20px;
  right: 20px;
  width: 300px;

  &__item {
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgb(0 0 0 / 30%);
    margin-bottom: 10px;
    color: #fff;

    &.success {
      background-color: #2ecc40;
    }

    &.error {
      background-color: #ff4136;
    }

    &.warning {
      background-color: #f39c12;
    }
  }
}
