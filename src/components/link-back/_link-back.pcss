body {
  @mixin media $md {
    padding-top: 64px;
  }
}

.link-back {
  position: absolute;
  background-color: #FBFBFB;
  top: 0;
  left: 0;
  width: 64px;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;

  @mixin media $md {
    width: auto;
    bottom: auto;
    right: 0;
    height: 64px;
  }
}
