.content-message {
  margin-top: 12px;
  margin-bottom: 12px;
  max-width: 400px;
  width: fit-content;
  border-radius: 6px;
  overflow: hidden;
  position: relative;

  &--my {
    margin-left: auto;
  }

  &--opponent {
    background-color: #f8f8f8;
  }

  &__time {
    position: absolute;
    bottom: 4px;
    right: 4px;
    font-weight: 500;
    font-size: 9px;
    line-height: 1;
    color: #fff;
    text-align: right;
    padding: 2px 4px;
    background-color: rgb(82 82 82 / 50%);
    border-radius: 3px;
  }
}
